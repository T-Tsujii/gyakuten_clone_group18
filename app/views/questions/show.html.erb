<div class="container" >
  <div class="question">
    <h3>【質問】</h3>
    <% @question.title %>
    <%= markdown(@question.title).html_safe %>
    <h3>【詳細】</h3>
    <% @question.detail %>
    <%= markdown(@question.detail).html_safe %>
  </div>
</div>

<hr>
<% solutions.each do |solution| %>
  <p>【回答】</p>
  <%= solution.answer %>
<% end %>
<br>

<h3>回答投稿</h3>
<%= form_with model: [@question,@solution], local: true do |f| %>
  <div class="form-group">
    <p>【回答】</p>
    <p><%= f.text_area :answer, rows: 5, class: "form-control"%></p>
  </div>
  <div class="form-group">
    <button type="f.submit" class="btn btn-primary btn-block">送信</button>
  </div>
<% end %>
