<div id="container">
  <div class="container">
  </div>
  <section id="questions">
    <div class="container">
      <% @questions.each do |question| %>
        <div class="question-container">
          <a href="/question/<%= question.id %>">
            <div class="question">
              <div class="row">
                <div class="col-md-7">
                  <div class="title-container">
                    <p class="title">
                      <%= question.title %>
                    </p>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="info text-right">
                    <p>質問日&nbsp;&nbsp;&nbsp;&nbsp;<%= question.created_at.strftime('%Y年%m月%d日') %></p>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </section>
</div>





