

<h2>新規投稿</h2>
<%= form_with model: @question, local: true do |f| %>
  <div class="form-group">
    <p>【質問】</p>
    <p><%= f.text_field :title, class: "form-control" %></p>
  </div>
  <div class="form-group">
    <p>【詳細】</p>
    <p><%= f.text_area :detail, rows: 5,class: "form-control"%></p>
  </div>
  <div class="form-group">
    <button type="f.submit" class="btn btn-primary btn-block">送信</button>
  </div>
<% end %>


<div id="container">
  <div class="container">
  </div>
  <section id="questions">
    <div class="container">
      <% @questions.each do |question| %>
          <a href="/questions/<%= question.id%>">
            <div class="question">
              <div class="row">
                <div class="col-md-7">
                  <div class="title-container">
                    <p class="title">
                      <%= question.title %>
                    </p>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="info text-right">
                    <p>質問日&nbsp;&nbsp;&nbsp;&nbsp;<%= question.created_at.strftime('%Y年%m月%d日') %></p>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </section>
</div>





