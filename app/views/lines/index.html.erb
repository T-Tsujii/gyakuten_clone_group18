<div class="container">
  <h3 class="text-success">LINE@</h3>
  <div class="table-container">
    <table class="table table-striped">
      <thead class="bg-success text-light">
        <tr>
          <th scope="col">No.</th>
          <th scope="col">ジャンル</th>
          <th scope="col">内容</th>
        </tr>
      </thead>
      <tbody>
          <% @lines.each.with_index(1) do |line, i| %>
        <tr>
          <th scope="row"><%= "#{i}" %></th>
          <td><%= line.genre %></td>
          <td><%= link_to line.title, line_path(line), target: :_blank %></td>
        </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>